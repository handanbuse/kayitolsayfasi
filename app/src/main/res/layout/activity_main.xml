<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="KAYİT OL "
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Ad :"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editad" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Soyad : "
        android:textSize="19sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editsoyad"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="9dp"
        android:text="Şehir"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/editsehir"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Yaş"
        android:textSize="19sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edityas"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="22dp"
        android:text="HOBİLER"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxhobi2"
        app:layout_constraintStart_toStartOf="@+id/checkBoxhobi2" />

    <EditText
        android:id="@+id/editad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:hint="adınızı giriniz"
        android:inputType="text"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="@+id/editsoyad"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editsoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="soyadınızı giriniz "
        android:inputType="text"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/editsehir"
        app:layout_constraintStart_toStartOf="@+id/editsehir" />

    <EditText
        android:id="@+id/editsehir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="73dp"
        android:ems="10"
        android:hint="şehir giriniz"
        android:inputType="text"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editad" />

    <EditText
        android:id="@+id/edityas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="yaş giriniz"
        android:inputType="number|numberSigned"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/editsehir"
        app:layout_constraintTop_toBottomOf="@+id/editsehir" />

    <CheckBox
        android:id="@+id/checkBoxhobi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="resim"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBoxhobi2"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxhobi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="37dp"
        android:text="oyun"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="@+id/edityas"
        app:layout_constraintStart_toStartOf="@+id/checkBoxhobi1" />

    <CheckBox
        android:id="@+id/checkBoxhobi3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="37dp"
        android:text="spor"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="31dp"
        android:text="cinsiyet : "
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/btnkayit"
        app:layout_constraintStart_toStartOf="@+id/btnkayit">

        <RadioButton
            android:id="@+id/radioBtnE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erkek"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="524dp" />

        <RadioButton
            android:id="@+id/radioBtnK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kadın "
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="530dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnkayit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="43dp"
        android:onClick="btnkayitol"
        android:text="kayıt ol "
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/checkBoxhobi2" />

</androidx.constraintlayout.widget.ConstraintLayout>